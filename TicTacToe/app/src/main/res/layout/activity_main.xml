<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
		android:id="@+id/activity_main"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:paddingBottom="@dimen/activity_vertical_margin"
		tools:context="de.rubeen.udemy.tictactoe.MainActivity">
	
	<GridLayout
			android:layout_width="match_parent"
			android:layout_height="360dp" android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
			android:background="@drawable/spielfeld" android:rowCount="3" android:columnCount="3">
		
		<ImageView
				app:srcCompat="@drawable/player1" android:id="@+id/imageView4"
				android:layout_width="118dp" android:layout_height="118dp"/>
		<ImageView
				app:srcCompat="@drawable/player1" android:id="@+id/imageView3"
				android:layout_width="118dp" android:layout_height="118dp"/>
		<ImageView
				app:srcCompat="@drawable/player1" android:id="@+id/imageView2"
				android:layout_width="118dp" android:layout_height="118dp"/>
		<ImageView
				app:srcCompat="@drawable/player1" android:id="@+id/imageView5"
				android:layout_width="118dp" android:layout_height="118dp"/>
		<ImageView
				android:id="@+id/imageView6"
				android:layout_width="118dp" android:layout_height="118dp" android:onClick="clickHandler"/>
		<ImageView
				app:srcCompat="@drawable/player1" android:id="@+id/imageView7"
				android:layout_width="118dp" android:layout_height="118dp"/>
		<ImageView
				app:srcCompat="@drawable/player1" android:id="@+id/imageView8"
				android:layout_width="118dp" android:layout_height="118dp"/>
		<ImageView
				app:srcCompat="@drawable/player1" android:id="@+id/imageView9"
				android:layout_width="118dp" android:layout_height="118dp"/>
		<ImageView
				app:srcCompat="@drawable/player1" android:id="@+id/imageView10"
				android:layout_width="118dp" android:layout_height="118dp"/>
	</GridLayout>
</RelativeLayout>
